                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success">Daxil Ol</button>
                </div>
            </div>
        </div>
    </form>

    <script>
        $(document).ready(function () {

            $.ajaxSetup({
                statusCode: {
                    401: function () {

                        $('#softlogin')
                            .modal({
                                backdrop: 'static',
                                keyboard: true
                            })
                            .modal('show');
                    }
                }
            });

            $('#softlogin').submit(function (e) {

                e.preventDefault();

                const formData = new FormData(e.currentTarget);

                $.ajax({
                    url: '@Url.Action("Signin","Account",values:new {area=""})',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        if (response.error == false) {
                            $('#softlogin').modal('hide');
                            e.currentTarget.reset();
                            return;
                        }
                        else {
                            alert(response.message);
                        }
                    },
                    error: function (response) {
                    }
                });

            });
        });
    </script>
